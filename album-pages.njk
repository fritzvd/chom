---
pagination:
    data: album
    size: 1
    alias: album
permalink: "album/{{ album.name }}/index.html"
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Song page for {{ album.title }}">

    <meta property="og:title" content="{{ album.title }}">
    <meta property="og:type" content="music:song">
    <meta property="og:description" content="Song page for {{ album.title }}">
    <meta property="og:url" content="{{ album.url }}">

    <meta property="og:image" content="{{ album.cover_400 }}">
    <meta property="og:image:type" content="image/png">
    <meta property="og:image:width" content="400">
    <meta property="og:image:height" content="400">

    <title>{{ album.title }}</title>
    <link rel="shortcut icon" href="/static/img/favicon.png" type="image/png">
    <link rel="stylesheet" href="/static/css/style.css">

</head>
<body>
    <img class="bg" src="/static/img/covers/{{ album.name }}.png" alt="Cover Image for {{ album.title }}">
    <header>
        <div class="share">
            <a href="whatsapp://send?text=Some new music for ya: {{ album.url }}"><img src="/static/img/whatsapp.svg" alt="Share on Whatsapp">
            </a>
        </div>
        <img src="/static/img/covers/{{ album.name }}.png" alt="Background Image with album cover for {{ album.title }}">
        <h1>{{ album.title }}</h1>
    </header>
    <main>
        <ul id="platforms">
            {% for service in album.services %}
                <li>
                    <a class="music-service" href="{{ service.url }}">
                        <img class="platform" src="/static/img/vendors/{{ service.serviceName }}.png" alt="{{ service.serviceName }} Logo">
                        <span class="btn">Play</span>
                    </a>
                </li>
            {% endfor %}
        </ul>
    </main>
    <footer>
        <p>By using this service you're not allowing any cookies.</p>
        <p>I'm not collecting any data.</p>
    </footer>  
    <!-- Matomo -->
<script>
    var _paq = window._paq = window._paq || [];
    /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
    _paq.push(['trackPageView']);
    _paq.push(['enableLinkTracking']);
    (function() {
      var u="//fritzvd.goedgehost.nl/matomo-latest/matomo/";
      _paq.push(['setTrackerUrl', u+'matomo.php']);
      _paq.push(['setSiteId', '1']);
      var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
      g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
    })();
  </script>
  <!-- End Matomo Code -->  
</body>
</html>